@page "/inspector" 
@inherits InspectorComponent

<BSContainer>
    <BSTabGroup >
        <BSTabList>
            <BSTab InitialSelection="@true">
                <BSTabLabel>Regex</BSTabLabel>
                <BSTabContent>
                    <BSRow>
                        <BSCol XS="6">
                            <h1>Data</h1>
                            <div class="overflow-auto">@Data</div>
                        </BSCol>
                        <BSCol XS="6">

                            <EditForm Model="@RegexModel">
                                <DataAnnotationsValidator/>
                                <ValidationSummary/>
                                <div class="form-group row">
                                    <label for="pattern" class="col-sm-2 col-form-label">Regex:</label>
                                    <div class="col-sm-10">
                                        <InputText id="pattern" class="form-control" @bind-Value="RegexModel.Pattern"/>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="result" class="col-sm-2 col-form-label">Result:</label>
                                    <div class="col-sm-10">
                                        @RegexModel.Result
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <button class="btn btn-primary" @onclick="ApplyRegex">Apply</button>
                                </div>
                            </EditForm>

                        </BSCol>
                    </BSRow>
                </BSTabContent>
            </BSTab>
            <BSTab>
                <BSTabLabel>JSon</BSTabLabel>
                <BSTabContent>
                    <BSRow>
                        <BSCol XS="6">
                            <h1>JSon</h1>
                            <div class="overflow-auto">@Data</div>
                        </BSCol>
                        <BSCol XS="6">

                        </BSCol>
                    </BSRow>
                </BSTabContent>
            </BSTab>
        </BSTabList>
        <BSTabSelectedContent/>
    </BSTabGroup>

</BSContainer>