@page "/inspector" 
@inherits InspectorComponent

<BSContainer>
    <BSTabGroup >
        <BSTabList>
            <BSTab InitialSelection="@true">
                <BSTabLabel>Regex</BSTabLabel>
                <BSTabContent>
                    <BSRow>
                        <BSCol XS="6">
                            <h1>Data</h1>
                            <div class="overflow-auto">@Data</div>
                        </BSCol>
                        <BSCol XS="6">
                            <EditForm Model="@RegexModel">
                                <DataAnnotationsValidator/>
                                <ValidationSummary/>
                                <div class="form-group row">
                                    <label for="regexPattern" class="col-sm-2 col-form-label">Regex:</label>
                                    <div class="col-sm-10">
                                        <InputText id="regexPattern" class="form-control" @bind-Value="RegexModel.Pattern"/>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="regexResult" class="col-sm-2 col-form-label">Result:</label>
                                    <div class="col-sm-10" id="regexResult">
                                        @RegexModel.Result
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <button class="btn btn-primary" @onclick="ApplyRegex">Apply</button>
                                </div>
                            </EditForm>
                        </BSCol>
                    </BSRow>
                </BSTabContent>
            </BSTab>
            <BSTab>
                <BSTabLabel>JSon</BSTabLabel>
                <BSTabContent>
                    <BSRow>
                        <BSCol XS="6">
                            <h1>JSon</h1>
                            <div class="overflow-auto">@Data</div>
                        </BSCol>
                        <BSCol XS="6">
                            <EditForm Model="@JsonModel">
                                <DataAnnotationsValidator/>
                                <ValidationSummary/>
                                <div class="form-group row">
                                    <label for="jsonPath" class="col-form-label">Json path:</label>
                                    <div>
                                        <InputText id="jsonPath" class="form-control" @bind-Value="JsonModel.Path"/>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="jsonResult" class="col-form-label">Result:</label>
                                    <div id="jsonResult"><pre><code>
                                        @JsonModel.Result
                                    </code></pre></div>
                                </div>
                                <div class="form-group row">
                                    <button class="btn btn-primary" @onclick="ApplyJson">Apply</button>
                                </div>
                            </EditForm>
                        </BSCol>
                    </BSRow>
                </BSTabContent>
            </BSTab>
        </BSTabList>
        <BSTabSelectedContent/>
    </BSTabGroup>

</BSContainer>